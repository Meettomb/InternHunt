<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_border_without_color"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Title -->
    <LinearLayout
        android:id="@+id/displayPostDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title:"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/JobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internship Title"
            android:textColor="@color/primary_text" />
        <TextView
            android:id="@+id/postedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python Developer Internship"
            android:textColor="@color/black"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Internship Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Internship Type:"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/internshipType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internship Type"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <!-- Internship Timing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTimingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Internship Timing:"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/internshipTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internship Time"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <!-- Stipend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStipendLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stipend:"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Stipend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stipend"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <!-- Deadline -->
    <LinearLayout
        android:id="@+id/DeadlineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDeadlineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deadline:"
            android:textColor="@color/error_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline Date"
            android:textColor="@color/primary_text" />
    </LinearLayout>

    <!-- Edit/Delete buttons -->
    <LinearLayout
        android:id="@+id/edit_delete_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/primary_color"
            android:padding="6dp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/error_color"
            android:padding="6dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</LinearLayout>
