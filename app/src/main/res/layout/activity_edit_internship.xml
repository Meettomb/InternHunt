<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInternship"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Update Internship"
                    android:textColor="@color/primary_text"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <!-- InternshipTitle -->
                <EditText
                    android:id="@+id/InternshipTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/work"
                    android:hint="Internship Title"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/InternshipTitleError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <!-- Internship Description -->
                <EditText
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/description"
                    android:gravity="top|start"
                    android:hint="Internship Description"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/DescriptionError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <!-- Location -->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internship Location"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/location_on"
                    android:hint="Location"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LocationError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/Stipend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/currency_rupee"
                    android:hint="Stipend"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/StipendError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/Duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/hourglass_bottom"
                    android:hint="Duration in Month(6)"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/DurationError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <MultiAutoCompleteTextView
                        android:id="@+id/DegreeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_all_sides"
                        android:completionThreshold="1"
                        android:dropDownWidth="match_parent"
                        android:dropDownHeight="wrap_content"
                        android:hint="Select Degree Eligibility"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:drawableEnd="@drawable/verified" />
                </LinearLayout>
                <TextView
                    android:id="@+id/degreeError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />



                <EditText
                    android:id="@+id/CompanyId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:visibility="gone"
                    android:textColor="@color/black"/>


                <!-- Internship Skills -->
                <EditText
                    android:id="@+id/Skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/psychology"
                    android:gravity="top|start"
                    android:hint="Skills (Skill1, Skill2)"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/skillsError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Internship Responsibilities -->
                <EditText
                    android:id="@+id/Responsibilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/psychology"
                    android:gravity="top|start"
                    android:hint="Responsibilities (Separate with commas, optional)"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="14sp" />



                <!-- Application Deadline -->
                <TextView
                    android:id="@+id/DeadlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Application Deadline"

                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_all_sides"
                        android:hint="30"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="15dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_all_sides"
                        android:hint="12"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="15dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_all_sides"
                        android:hint="2000"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="15dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/DateError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/MonthError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/YearError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Opening -->
                <EditText
                    android:id="@+id/Opening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/group_add"
                    android:hint="Openings (10) "
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/OpeningError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />



                <!-- Internship Type Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Internship Type"
                    android:textColorHint="#C43C3C3C"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/internshipType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:background="@drawable/border_all_sides"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/internshipTypeError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />



                <!-- Internship Time Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Internship Time"
                    android:textColorHint="#C43C3C3C"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/internshipTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:background="@drawable/border_all_sides"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/internshipTimeError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This field is required"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />



                <TextView
                    android:id="@+id/perksDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_all_sides"
                    android:drawableEnd="@drawable/outline_arrow_drop_down_24"
                    android:hint="Select Perks"
                    android:padding="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/hint_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/perksError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <!-- Post Button -->
                <TextView
                    android:id="@+id/PostButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:paddingVertical="15dp"
                    android:text="Post"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Centered ProgressBar loader -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#0E64D2"
        android:visibility="gone" />

</FrameLayout>
