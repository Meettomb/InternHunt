<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_skills">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginBottom="15dp"
            android:contentDescription="Close"
            android:padding="8dp"
            android:src="@drawable/close" />

        <!-- Skills Container -->
        <LinearLayout
            android:id="@+id/skillsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Skill Input -->
            <EditText
                android:id="@+id/skillEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Skill"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:background="@drawable/border_all_sides"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            android:paddingHorizontal="8dp">

            <Button
                android:id="@+id/addMoreSkillBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_dark"
                android:text="Add More Skills"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/saveSkillsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_color"
                android:text="Save Skills"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>