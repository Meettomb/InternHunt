<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyLists"
    android:fitsSystemWindows="true">

    <!-- Main Content (Right Side) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".CompanyLists">

        <!-- Header -->

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="1">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/UserProfileImage"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/full_round_border"
                android:backgroundTint="#21000000"
                android:scaleType="centerCrop"
                app:layout_column="0"
                app:layout_gravity="center_vertical"
                app:layout_row="0"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_borders"
                android:drawableStart="@drawable/search"
                android:gravity="start|center_vertical"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textColorHint="#C43C3C3C"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clipToPadding="false"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Header" />


        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/BottomHomeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottom_nav_icon_design"
                    android:padding="8dp"
                    android:tint="#003366 "
                    app:srcCompat="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Company -->
            <LinearLayout
                android:id="@+id/BottomCompanyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottom_nav_icon_design"
                    android:padding="8dp"
                    android:tint="#003366"
                    app:srcCompat="@drawable/apartment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Search -->
            <LinearLayout
                android:id="@+id/BottomSearchButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottom_nav_icon_design"
                    android:padding="8dp"
                    android:tint="#003366"
                    app:srcCompat="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>


            <!-- Bookmark -->
            <LinearLayout
                android:id="@+id/BottomBookmarkButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottom_nav_icon_design"
                    android:padding="8dp"
                    android:tint="#003366 "
                    app:srcCompat="@drawable/bookmark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookmark"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




    <!-- Navigation Drawer (Left Side) -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/side_navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Profile in Drawer -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/profile_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="0dp"
                    android:paddingEnd="10dp"
                    app:columnCount="2">

                    <FrameLayout
                        android:id="@+id/nav_profile"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/full_round_border"
                        android:padding="2dp"> <!-- space between border and image -->

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/UserProfileImage2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImage" />

                        <ImageView
                            android:id="@+id/edit_icon_overlay"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/border_all_sides"
                            android:padding="4dp"
                            android:src="@drawable/edit" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_column="1"
                        app:layout_gravity="center"
                        app:layout_row="0">

                        <TextView
                            android:id="@+id/UserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:maxLines="2"
                            android:textColor="#0E64D2"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.gridlayout.widget.GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:paddingStart="0dp"
                    android:paddingTop="20dp"
                    android:text="Account"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/home"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Home"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nav_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/security"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Security"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nav_add_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/plus"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Add Post / Job"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/bookmark"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Saved Jobs / Bookmarks"
                    android:textColor="#888888"
                    android:textSize="18sp" />

<!--                <TextView-->
<!--                    android:id="@+id/MyPosts"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginVertical="8dp"-->
<!--                    android:background="@drawable/nav_item_background"-->
<!--                    android:drawableStart="@drawable/list_alt"-->
<!--                    android:drawablePadding="12dp"-->
<!--                    android:paddingHorizontal="5dp"-->
<!--                    android:paddingVertical="10dp"-->
<!--                    android:text="My Posts"-->
<!--                    android:textColor="#888888"-->
<!--                    android:textSize="18sp" />-->

                <TextView
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/history"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Applied Jobs"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/notification_settings"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Notifications"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/settings"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Settings"
                    android:textColor="#888888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/nav_item_background"
                    android:drawableStart="@drawable/help"
                    android:drawablePadding="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="Help / Support"
                    android:textColor="#888888"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <!-- Logout at the Bottom -->
        <TextView
            android:id="@+id/LogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_all_sides"
            android:backgroundTint="#E03737"
            android:drawableStart="@drawable/logout"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Log out"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
