<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/internhunt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="#000000"
                android:textSize="48sp"
                android:textStyle="bold" />

            <!-- Email -->
            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_all_sides"
                android:hint="Enter Email Id"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#C43C3C3C"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_email"/>

            <TextView
                android:id="@+id/EmailError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This field is required"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="gone"/>


            <!-- Password -->
            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_all_sides"
                android:hint="Enter Passeord"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#C43C3C3C"
                android:textSize="18sp"
                android:drawableEnd="@drawable/visibility"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/PasswordError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This field is required"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="If You don't have an account?"
                    android:textColor="#C43C3C3C" />

                <TextView
                    android:id="@+id/textViewSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="5dp"
                    android:text="Sign Up"
                    android:textColor="#2F89FC"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>