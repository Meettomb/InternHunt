<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/icon_bg_primary" /> <!-- background color -->
            <corners android:radius="50dp" /> <!-- rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- no fill -->
            <stroke android:width="2dp" android:color="@color/icon_bg_primary" /> <!-- border -->
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>
